<div>



<h3>Add your favorite band</h3>


    <div id="add-bands-container">
      

        <div id="add-bands-inside-container">

            
        <label for="image">Band Picture</label>
        <input type="file" name="image" required>

        <button>Upload image</button>

        <form id="add-bands-form" action ="/add-bands"  method="post">


            <label for="name">Band name:</label>
            <input type="text" name="name"  id="band-name" required>
            <br>

            <label for="genre">Genre:</label>
            <input type="text" name="genre"  id="genre" required>

          <br>

            <label for="info">Band Info:</label>
            <input type="text" name="info" id="band-info" required>
            <br>

             <label for="socialmedia">Social media:</label>
            <input type="text" name="socialmedia" id="socialmedia" required>
            <br>

            <button type="submit">Submit</button>

            {{#if this.errMess}}

<p class="error">{{this.errMess}}</p>

{{/if}}

    
        </form>

        

     </div>

    </div>










</div>